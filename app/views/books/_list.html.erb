<h2>User info</h2>

<table>
<tbody>
<tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
<tr>
<th>name</th>
<th><%= user.name %></th>
</tr>

<tr>
<th>introduction</th>
<th><%= user.introduction %></th>
</tr>

<tr>
<th><%=link_to "編集", edit_user_path(current_user) %></th>
</tr>
</tbody>
</table>


<%= form_with model:book, local: true do |f| %>
<h5>Title</h5>
<%= f.text_field :title %>
<h5>Opinion</h5>
<%= f.text_area :body %>
<br>
<%= f.submit "Create Book" %>

<% end %>