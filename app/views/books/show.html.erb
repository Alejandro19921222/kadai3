<div class="container">
 <div class="row">
<%= render 'books/list', book: @newbook, user: @user %>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
 <tbody>
  <tr>
<td><%= link_to user_path(@user.id) do %>
<%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br>
<%= @user.name %>
<% end %></td>
<td><%= link_to @book.title,book_path(@book.id)  %></td>
<td><%= @book.body %></td>
<% if @user == current_user %>
<td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book" %></td>
<td><%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger destroy_book", "data-confirm" => "本当に消しますか？" %></td>
<% end %>
</tr>
 </tbody>
</table>
</div>
</div>
</div>